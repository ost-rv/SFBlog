@model IEnumerable<SFBlog.Models.CommentViewModel>

<h4>Комментарии</h4>

@foreach (var comment in Model) {
    <div class="form-group">
        <div class="card">
            <div class="card-body">
                <p class="card-text">@comment.Content</p>
            </div>
        </div>
        <p class="text-right">
            <span class="badge bg-success text-light">@comment.Author</span>
        </p>
    </div>
}
