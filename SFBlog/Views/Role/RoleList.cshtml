@model IEnumerable<SFBlog.Models.RoleViewModel>

@{
    ViewData["Title"] = "Все роли";
}

<h4>Все роли</h4>

<p>
    <a asp-controller="Role" asp-action="AddRole">Добавить роль</a>
</p>
@foreach (var role in Model) {
    <div class="form-group">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-controller="Role" asp-action="EditRole" asp-route-id="@role.Id">@role.Name</a>
                </h5>
                <p class="card-text">@role.Description</p>
                <div>
                    @if(User.IsInRole("Aдминистратор")) 
                    {
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-outline-danger">
                                <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">Удалить</a>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
